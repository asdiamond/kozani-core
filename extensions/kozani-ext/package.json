{
  "name": "kozani-ext",
  "displayName": "Kozani Extension",
  "publisher": "kozani",
  "version": "0.0.1",
  "enabledApiProposals": [
    "chatProvider",
    "defaultChatParticipant"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languageModelChatProviders": [
      {
        "vendor": "kozani",
        "name": "Kozani",
        "family": "kozani",
        "version": "1.0",
        "maxInputTokens": 128000,
        "maxOutputTokens": 16384,
        "isDefault": true
      }
    ],
    "chatParticipants": [
      {
        "id": "kozani.chat",
        "name": "Kozani",
        "description": "Kozani chat agent",
        "isDefault": true,
        "commands": [],
        "modes": [
          "agent",
          "ask",
          "edit"
        ]
      }
    ],
    "commands": [
      {
        "command": "kozani-ext.signIn",
        "title": "Kozani: Sign In with GitHub"
      },
      {
        "command": "kozani-ext.signOut",
        "title": "Kozani: Sign Out"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}

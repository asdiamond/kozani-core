{
  "name": "kozani-ext",
  "displayName": "Kozani Extension",
  "publisher": "kozani",
  "version": "0.0.1",
  "enabledApiProposals": [
    "chatProvider",
    "defaultChatParticipant"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onView:kozaniSecondaryView",
    "onCommand:kozani-ext.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "kozani.chat",
        "name": "Kozani",
        "description": "Kozani chat agent",
        "isDefault": true,
        "commands": [],
        "modes": [
          "agent",
          "ask",
          "edit"
        ]
      }
    ],
    "viewsContainers": {
      "secondarySidebar": [
        {
          "id": "kozaniSecondary",
          "title": "Kozani",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "kozaniSecondary": [
        {
          "id": "kozaniSecondaryView",
          "name": "Kozani",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "kozani-ext.helloWorld",
        "title": "Kozani: Hello World"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.0"
  }
}
